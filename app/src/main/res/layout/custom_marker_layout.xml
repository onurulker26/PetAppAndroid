<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/marker_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minWidth="110dp"
        android:maxWidth="170dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:background="@drawable/bg_marker_normal">

        <!-- Sol taraftaki ikon -->
        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_vet_marker"
            android:layout_gravity="center_vertical"
            android:contentDescription="Veteriner İkonu" />

        <!-- Sağ taraftaki metin alanı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/marker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/marker_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#555555"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- Alt kısımdaki üçgen şeklindeki pointer -->
    <View
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_marker_pointer"
        android:rotation="45"
        android:layout_below="@id/marker_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"/>
</RelativeLayout> 